<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.example.android.christmascard.MainActivity">

    <TextView
        android:id="@+id/merry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin"

        android:text="@string/merry"
        android:textColor="@color/black"
        style="@style/christmas"
        />

    <TextView
        android:id="@+id/christmas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/christmas"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:layout_margin="@dimen/main_margin"
        style="@style/christmas"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/tree" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/main_half">

        <ImageView
            android:id="@+id/package01"
            style="@style/giftPackageLand"
            android:src="@drawable/package02"

            />

        <ImageView
            android:id="@+id/package02"
            style="@style/giftPackageLand"
            android:src="@drawable/package03" />


        <ImageView
            android:id="@+id/package03"
            style="@style/giftPackageLand"
            android:src="@drawable/package04" />


    </LinearLayout>


</RelativeLayout>
